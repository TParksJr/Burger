<hr>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <h3>Burgers still to Devour</h3>
            <ul id="burgers" class="list-group">
                {{#each burgers}}
                    {{#unless this.devoured}}
                    <li class="list-group-item">
                        <p class="text-center">{{this.name}}</p>
                        <img src="http://vectips.com/wp-content/uploads/2016/02/25.jpg" class="smallImg">
                        <form class="devour-form" class="button-size">
						    <input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						    <button type="submit" class="btn btn-danger">Devour this burger!</button>
					    </form>
                    </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 col-sm-12">
            <h3>Burger Graveyard</h3>
            <ul id="eatenBurgers">
                {{#each burgers}}
                    {{#if this.devoured}}
                    <li class="list-group-item">
                        <p class="text-center">{{this.name}}</p>
                    </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>